{
  "name": "authverse",
  "version": "0.0.0-development",
  "description": "CLI tool for creating authverse projects",
  "repository": {
    "url": "https://github.com/abdirahmanmahamoud/authverse"
  },
  "homepage": "https://authverse.abdirahmandev.com",
  "license": "MIT",
  "author": {
    "name": "Abdirahman Mohamoud",
    "email": "me@abdirahmandev.com",
    "url": "https://abdirahmandev.com"
  },
  "type": "module",
  "bin": {
    "authverse": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup ./index.ts --format esm,cjs --dts --out-dir dist && cp -r ../template ./dist/template",
    "build:windows": "tsup ./index.ts --format esm,cjs --dts --out-dir dist && xcopy ..\\template dist\\template /E /I /Y && npm link",
    "dev": "tsup ./index.ts --watch --onSuccess \"node dist/index.js\"",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "auth",
    "authverse",
    "auth-ui",
    "auth-ui-templates",
    "better-auth",
    "nextjs",
    "shadcn"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^12.10.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
